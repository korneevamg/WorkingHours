        app:layout_constraintTop_toTopOf="@+id/tue_day_background" />

    <ImageButton
        android:id="@+id/tue_edit"
        style="@style/edit_button"
        app:layout_constraintBottom_toBottomOf="@+id/tue_day_background"
        app:layout_constraintEnd_toEndOf="@+id/tue_day_background"
        app:layout_constraintTop_toTopOf="@+id/tue_day_background"
        android:background="@drawable/edit_img"
        android:onClick="editWorkingHours"/>

    <!--WENSDAY-->

    <ImageView
        android:id="@+id/wen_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
