    <TextView
        android:id="@+id/wen_day_data"
        style="@style/day_style"
        android:text="01.02.2018"
        app:layout_constraintBottom_toBottomOf="@+id/wen_day_background"
        app:layout_constraintStart_toStartOf="@+id/wen_day_background"
        app:layout_constraintTop_toTopOf="@+id/wen_day_background" />

