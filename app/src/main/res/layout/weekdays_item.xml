<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/kw_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="TextView"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mo_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kw_number" />

    <TextView
        android:id="@+id/mo_day_data"
        style="@style/day_style"
        android:text="01.01.2018"
        app:layout_constraintBottom_toBottomOf="@+id/mo_day_background"
        app:layout_constraintStart_toStartOf="@+id/mo_day_background"
        app:layout_constraintTop_toTopOf="@+id/mo_day_background"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/mo_working_hours"
        style="@style/working_hours_style"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/mo_day_background"
        app:layout_constraintStart_toEndOf="@+id/mo_day_data"
        app:layout_constraintTop_toTopOf="@+id/mo_day_background"
        app:layout_constraintVertical_bias="0.511" />

    <ImageView
        android:id="@+id/mo_edit"
        style="@style/edit_button"
        android:background="@drawable/edit_img"
        android:onClick="editWorkingHours"
        app:layout_constraintBottom_toBottomOf="@+id/mo_day_background"
        app:layout_constraintEnd_toEndOf="@+id/mo_day_background"
        app:layout_constraintTop_toTopOf="@+id/mo_day_background"
        app:layout_constraintVertical_bias="0.0" />

 <!--TUESDAY-->

    <ImageView
        android:id="@+id/tue_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
