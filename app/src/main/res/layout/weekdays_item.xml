        app:layout_constraintBottom_toBottomOf="@+id/thu_day_background"
        app:layout_constraintEnd_toEndOf="@+id/thu_day_background"
        app:layout_constraintTop_toTopOf="@+id/thu_day_background"
        android:background="@drawable/edit_img"
        android:onClick="editWorkingHours"/>

    <!--FRIDAY-->

    <ImageView
        android:id="@+id/fri_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
