        app:layout_constraintBottom_toBottomOf="@+id/fri_day_background"
        app:layout_constraintEnd_toEndOf="@+id/fri_day_background"
        app:layout_constraintTop_toTopOf="@+id/fri_day_background"
        android:background="@drawable/edit_img"
        android:onClick="editWorkingHours"/>

    <!--SATURDAY-->

    <ImageView
        android:id="@+id/sat_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
