        app:layout_constraintBottom_toBottomOf="@+id/fri_day_background"
        app:layout_constraintStart_toStartOf="@+id/fri_day_background"
        app:layout_constraintTop_toTopOf="@+id/fri_day_background" />

    <TextView
        android:id="@+id/fri_working_hours"
