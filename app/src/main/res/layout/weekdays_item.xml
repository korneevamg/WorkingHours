    <TextView
        android:id="@+id/tue_day_data"
        style="@style/day_style"
        android:text="01.02.2018"
        app:layout_constraintBottom_toBottomOf="@+id/tue_day_background"
        app:layout_constraintStart_toStartOf="@+id/tue_day_background"
        app:layout_constraintTop_toTopOf="@+id/tue_day_background" />

    <TextView
        android:id="@+id/tue_working_hours"
        style="@style/working_hours_style"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/tue_day_background"
