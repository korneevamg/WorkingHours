        app:layout_constraintTop_toTopOf="@+id/wen_day_background"
        android:background="@drawable/edit_img"
        android:onClick="editWorkingHours"/>

    <!--THURSDAY-->

    <ImageView
        android:id="@+id/thu_day_background"
        style="@style/day_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wen_day_background" />

    <TextView
        android:id="@+id/thu_day_data"
        style="@style/day_style"
